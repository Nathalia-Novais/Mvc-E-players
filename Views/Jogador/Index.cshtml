@model Jogador
    @{
        ViewData["Title"] = "Jogadores";
    }

<div class="titulo_pagina">
    <h1>@ViewData["Title"]</h1>
</div>

<form method="POST" action='@Url.Action("Cadastrar")' class="cadastro">

    <div class="campo">
        <label>ID Jogador</label>
        <input type="text" name="IdJogador"required/>
    </div>

    <div class="campo">
        <label>ID Equipe</label>
        <input type="text" name="IdEquipe" required/>
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome" required />
    </div>

    <div class="campo">
        <label>Email</label>
        <input type="email" name="Email" required />
    </div>

    <div class="campo">
        <label>Senha</label>
        <input type="password" name="Senha" required/>
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table>
    <thead>
        <th>ID Jogador</th>
        <th>Nome</th>
        <th>Email</th>
    </thead>
    <tbody>
        @foreach(Jogador j in ViewBag.Jogadores){
            <tr>
                <td>@j.IdJogador</td>
                <td>@j.Nome</td>
                <td>@j.Email</td>
                <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@j.IdJogador">Excluir</a>
            </tr>
        }
    </tbody>
</table>
